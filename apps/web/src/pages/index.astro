---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';

// Mock Data: Haftanın Yıldızları
const weeklyStars = [
  {
    id: 1,
    name: "Zurna Dürümcüsü",
    rating: 9.2,
    cuisine: "Sokak Lezzetleri",
    image: "https://images.unsplash.com/photo-1626804475297-411d863b5285?auto=format&fit=crop&q=80&w=800",
    distance: "1.2 km"
  },
  {
    id: 2,
    name: "Burger Station",
    rating: 8.7,
    cuisine: "Burger",
    image: "https://images.unsplash.com/photo-1568901346375-23c9450c58cd?auto=format&fit=crop&q=80&w=800",
    distance: "3.5 km"
  },
  {
    id: 3,
    name: "Makarna Atölyesi",
    rating: 7.5,
    cuisine: "İtalyan",
    image: "https://images.unsplash.com/photo-1551183053-bf91b1dca038?auto=format&fit=crop&q=80&w=800",
    distance: "500m"
  }
];

// Skor Badge Rengi Belirleme
const getScoreColor = (score: number) => {
  if (score >= 8) return "bg-green-600";
  if (score >= 5) return "bg-orange-500";
  return "bg-red-600";
};
---

<BaseLayout title="iyisiniye - Bugün Canın Ne Çekiyor?" description="En iyi yemekleri ve restoranları keşfet.">
  <!-- Sticky Header -->
  <header class="sticky top-0 z-50 bg-white border-b border-gray-100 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
      <div class="flex items-center gap-2">
        <span class="text-2xl font-bold font-poppins text-orange-600">iyisiniye</span>
      </div>
      <div class="flex items-center gap-4">
        <button class="text-sm font-medium text-gray-600 hover:text-orange-600">Giriş Yap</button>
        <button class="bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-orange-700 transition-colors">
          Kayıt Ol
        </button>
      </div>
    </div>
  </header>

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-orange-50 to-white py-20 lg:py-32 overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-poppins text-gray-900 mb-8">
          Bugün Canın <span class="text-orange-600">Ne Çekiyor?</span>
        </h1>

        <!-- Search Box -->
        <div class="max-w-3xl mx-auto bg-white p-2 rounded-2xl md:rounded-full shadow-lg border border-gray-100 flex flex-col md:flex-row gap-2">
          <div class="flex-1 px-4 py-2 flex items-center border-b md:border-b-0 md:border-r border-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
            <input type="text" placeholder="Yemek veya mekan ara..." class="w-full bg-transparent focus:outline-none text-gray-700 placeholder-gray-400" />
          </div>
          <div class="flex-1 px-4 py-2 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
            <input type="text" placeholder="Konum (Semt, İlçe)" class="w-full bg-transparent focus:outline-none text-gray-700 placeholder-gray-400" />
          </div>
          <button class="bg-orange-600 text-white px-8 py-3 rounded-xl md:rounded-full font-medium hover:bg-orange-700 transition-all shadow-md hover:shadow-lg w-full md:w-auto">
            En İyisini Bul
          </button>
        </div>
      </div>
    </section>

    <!-- Popüler Yemekler Carousel -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold font-poppins text-gray-900 mb-8">Popüler Yemekler</h2>
        <!-- React Island: PopularDishesCarousel -->
        <div class="w-full h-64 bg-gray-50 rounded-xl border border-dashed border-gray-300 flex items-center justify-center text-gray-400">
          React Island: PopularDishesCarousel (Carousel Component)
        </div>
      </div>
    </section>

    <!-- Haftanın Yıldızları -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold font-poppins text-gray-900">Haftanın Yıldızları</h2>
          <a href="/search" class="text-orange-600 font-medium hover:underline">Tümünü Gör</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {weeklyStars.map((venue) => (
            <a href={`/restaurant/mock-slug`} class="group bg-white rounded-lg shadow-sm hover:shadow-card border border-gray-100 overflow-hidden transition-all duration-300">
              <div class="relative h-48 overflow-hidden">
                <img src={venue.image} alt={venue.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                <div class={`absolute top-4 right-4 ${getScoreColor(venue.rating)} text-white font-bold px-2 py-1 rounded-lg shadow-md`}>
                  {venue.rating}
                </div>
              </div>
              <div class="p-5">
                <h3 class="text-lg font-bold font-poppins text-gray-900 mb-1">{venue.name}</h3>
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>{venue.cuisine}</span>
                  <span class="mx-2">&bull;</span>
                  <span>{venue.distance}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- İstatistikler -->
    <section class="py-20 bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold font-poppins text-orange-500 mb-2">5.200+</div>
            <div class="text-gray-400">Restoran</div>
          </div>
          <div>
            <div class="text-4xl font-bold font-poppins text-orange-500 mb-2">58.000+</div>
            <div class="text-gray-400">Yemek Puanı</div>
          </div>
          <div>
            <div class="text-4xl font-bold font-poppins text-orange-500 mb-2">120.000+</div>
            <div class="text-gray-400">Mutlu Mide</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-100 pt-16 pb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
        <div class="col-span-1 md:col-span-1">
          <span class="text-2xl font-bold font-poppins text-orange-600">iyisiniye</span>
          <p class="mt-4 text-sm text-gray-500">
            Damak tadınıza en uygun lezzetleri bulmanın en kolay yolu.
          </p>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-4">Keşfet</h4>
          <ul class="space-y-2 text-sm text-gray-600">
            <li><a href="#" class="hover:text-orange-600">Popüler Mekanlar</a></li>
            <li><a href="#" class="hover:text-orange-600">Yeni Açılanlar</a></li>
            <li><a href="#" class="hover:text-orange-600">Kategoriler</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-4">Kurumsal</h4>
          <ul class="space-y-2 text-sm text-gray-600">
            <li><a href="#" class="hover:text-orange-600">Hakkımızda</a></li>
            <li><a href="#" class="hover:text-orange-600">İletişim</a></li>
            <li><a href="#" class="hover:text-orange-600">Gizlilik Politikası</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-4">Takip Et</h4>
          <div class="flex space-x-4">
             <!-- Social Icons placeholders -->
             <div class="w-8 h-8 bg-gray-100 rounded-full"></div>
             <div class="w-8 h-8 bg-gray-100 rounded-full"></div>
             <div class="w-8 h-8 bg-gray-100 rounded-full"></div>
          </div>
        </div>
      </div>
      <div class="border-t border-gray-100 pt-8 text-center text-sm text-gray-400">
        &copy; 2026 iyisiniye.com. Tüm hakları saklıdır.
      </div>
    </div>
  </footer>
</BaseLayout>
