---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import PopularDishesCarousel from '../components/PopularDishesCarousel';
import HeroSearch from '../components/HeroSearch';

// Mock Data: Haftanın Yıldızları
const weeklyStars = [
  {
    id: 1,
    name: "Zurna Dürümcüsü",
    rating: 9.2,
    cuisine: "Sokak Lezzetleri",
    image: "https://images.unsplash.com/photo-1540189549336-e6e99c3679fe?auto=format&fit=crop&q=80&w=800",
    distance: "1.2 km"
  },
  {
    id: 2,
    name: "Burger Station",
    rating: 8.7,
    cuisine: "Burger",
    image: "https://images.unsplash.com/photo-1559847844-5315695dadae?auto=format&fit=crop&q=80&w=800",
    distance: "3.5 km"
  },
  {
    id: 3,
    name: "Makarna Atölyesi",
    rating: 7.5,
    cuisine: "İtalyan",
    image: "https://images.unsplash.com/photo-1476224203421-9ac39bcb3327?auto=format&fit=crop&q=80&w=800",
    distance: "500m"
  }
];

// Skor Badge Rengi Belirleme
const getScoreColor = (score: number) => {
  if (score >= 8) return "bg-green-600";
  if (score >= 5) return "bg-orange-500";
  return "bg-red-600";
};
---

<BaseLayout title="iyisiniye - Bugün Canın Ne Çekiyor?" description="En iyi yemekleri ve restoranları keşfet.">
  <!-- Sticky Header -->
  <header class="sticky top-0 z-50 bg-white border-b border-gray-100 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-20 flex items-center justify-between">
      <a href="/" class="flex items-center gap-2">
        <img src="/logo.png" alt="iyisiniye" class="h-14" />
      </a>
      <div class="flex items-center gap-4">
        <button class="text-sm font-medium text-gray-600 hover:text-orange-600">Giriş Yap</button>
        <button class="bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-orange-700 transition-colors">
          Kayıt Ol
        </button>
      </div>
    </div>
  </header>

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-orange-50 to-white py-20 lg:py-32 overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-poppins text-gray-900 mb-8">
          Bugün Canın <span class="text-orange-600">Ne Çekiyor?</span>
        </h1>

        <!-- Search Box (React Island) -->
        <HeroSearch client:load />
      </div>
    </section>

    <!-- Popüler Yemekler Carousel -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold font-poppins text-gray-900 mb-8">Popüler Yemekler</h2>
        <PopularDishesCarousel client:visible />
      </div>
    </section>

    <!-- Haftanın Yıldızları -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold font-poppins text-gray-900">Haftanın Yıldızları</h2>
          <a href="/search" class="text-orange-600 font-medium hover:underline">Tümünü Gör</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {weeklyStars.map((venue) => (
            <a href={`/restaurant/mock-slug`} class="group bg-white rounded-lg shadow-sm hover:shadow-card border border-gray-100 overflow-hidden transition-all duration-300">
              <div class="relative h-48 overflow-hidden">
                <img src={venue.image} alt={venue.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                <div class={`absolute top-4 right-4 ${getScoreColor(venue.rating)} text-white font-bold px-2 py-1 rounded-lg shadow-md`}>
                  {venue.rating}
                </div>
              </div>
              <div class="p-5">
                <h3 class="text-lg font-bold font-poppins text-gray-900 mb-1">{venue.name}</h3>
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>{venue.cuisine}</span>
                  <span class="mx-2">&bull;</span>
                  <span>{venue.distance}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- İstatistikler -->
    <section class="py-20 bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold font-poppins text-orange-500 mb-2">5.200+</div>
            <div class="text-gray-400">Restoran</div>
          </div>
          <div>
            <div class="text-4xl font-bold font-poppins text-orange-500 mb-2">58.000+</div>
            <div class="text-gray-400">Yemek Puanı</div>
          </div>
          <div>
            <div class="text-4xl font-bold font-poppins text-orange-500 mb-2">120.000+</div>
            <div class="text-gray-400">Mutlu Mide</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-100 pt-16 pb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
        <div class="col-span-1 md:col-span-1">
          <img src="/logo.png" alt="iyisiniye" class="h-14" />
          <p class="mt-4 text-sm text-gray-500">
            Damak tadınıza en uygun lezzetleri bulmanın en kolay yolu.
          </p>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-4">Keşfet</h4>
          <ul class="space-y-2 text-sm text-gray-600">
            <li><a href="#" class="hover:text-orange-600">Popüler Mekanlar</a></li>
            <li><a href="#" class="hover:text-orange-600">Yeni Açılanlar</a></li>
            <li><a href="#" class="hover:text-orange-600">Kategoriler</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-4">Kurumsal</h4>
          <ul class="space-y-2 text-sm text-gray-600">
            <li><a href="#" class="hover:text-orange-600">Hakkımızda</a></li>
            <li><a href="#" class="hover:text-orange-600">İletişim</a></li>
            <li><a href="#" class="hover:text-orange-600">Gizlilik Politikası</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-4">Takip Et</h4>
          <div class="flex space-x-4">
             <a href="#" aria-label="Instagram" class="w-9 h-9 bg-gray-100 hover:bg-orange-100 rounded-full flex items-center justify-center text-gray-500 hover:text-orange-600 transition-colors">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 1.17.054 1.97.24 2.43.403a4.088 4.088 0 011.523.99 4.088 4.088 0 01.99 1.524c.163.46.349 1.26.403 2.43.058 1.265.07 1.645.07 4.849s-.012 3.584-.07 4.85c-.054 1.17-.24 1.97-.403 2.43a4.088 4.088 0 01-.99 1.523 4.088 4.088 0 01-1.524.99c-.46.163-1.26.349-2.43.403-1.265.058-1.645.07-4.849.07s-3.584-.012-4.85-.07c-1.17-.054-1.97-.24-2.43-.403a4.088 4.088 0 01-1.523-.99 4.088 4.088 0 01-.99-1.524c-.163-.46-.349-1.26-.403-2.43C2.175 15.747 2.163 15.367 2.163 12s.012-3.584.07-4.85c.054-1.17.24-1.97.403-2.43a4.088 4.088 0 01.99-1.523A4.088 4.088 0 015.15 2.636c.46-.163 1.26-.349 2.43-.403C8.845 2.175 9.225 2.163 12 2.163zm0-2.163C8.741 0 8.333.014 7.053.072 5.775.13 4.902.333 4.14.63a6.21 6.21 0 00-2.245 1.462A6.21 6.21 0 00.433 4.337C.136 5.1-.067 5.973-.125 7.25-.183 8.53-.197 8.938-.197 12.197s.014 3.668.072 4.948c.058 1.277.261 2.15.558 2.913a6.21 6.21 0 001.462 2.245 6.21 6.21 0 002.245 1.462c.763.297 1.636.5 2.913.558C8.333 24.383 8.741 24.397 12 24.397s3.668-.014 4.948-.072c1.277-.058 2.15-.261 2.913-.558a6.21 6.21 0 002.245-1.462 6.21 6.21 0 001.462-2.245c.297-.763.5-1.636.558-2.913.058-1.28.072-1.688.072-4.948s-.014-3.668-.072-4.948c-.058-1.277-.261-2.15-.558-2.913a6.21 6.21 0 00-1.462-2.245A6.21 6.21 0 0019.86.63C19.1.333 18.226.13 16.95.072 15.67.014 15.26 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
             </a>
             <a href="#" aria-label="X (Twitter)" class="w-9 h-9 bg-gray-100 hover:bg-orange-100 rounded-full flex items-center justify-center text-gray-500 hover:text-orange-600 transition-colors">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
             </a>
             <a href="#" aria-label="YouTube" class="w-9 h-9 bg-gray-100 hover:bg-orange-100 rounded-full flex items-center justify-center text-gray-500 hover:text-orange-600 transition-colors">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
             </a>
          </div>
        </div>
      </div>
      <div class="border-t border-gray-100 pt-8 text-center text-sm text-gray-400">
        &copy; 2026 iyisiniye.com. Tüm hakları saklıdır.
      </div>
    </div>
  </footer>
</BaseLayout>
